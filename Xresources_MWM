*lookAndFeel: motif
*Customization: -color


! Multiscreen (does not work) but Mwm can be combined with the vdesk program
! to get multiple screens
Mwm*multiScreen:		True
Mwm*screens:			Desk1 Desk2 Desk3 Desk4


! Icon Box
! Creates a box to place your icons
Mwm*useIconBox:		 True
Mwm*IconBoxDecoration:    -all
Mwm*iconBoxGeometry:		10x1+600-0

! Causes icon box to scroll horizontally only
Mwm*iconBoxSBDisplayPolicy:     horizontal

! Sets the icon box''s title (does not work)
Mwm*iconBoxName:		Icon Box
Mwm*iconBoxTitle:              Icon Box

! Icons'' background color
Mwm*icon*background:            #4992a7
Mwm*fadeNormalIcon:		True

! Sets where the icons will appear (on the screen, or in an icon box if it
! exists)
Mwm*iconPlacement:		left top
! "fades" icon of applications that are active


! Limit resize of clients
Mwm*limitResize:		True
Mwm*maximumMaximumSize :	1906 x 1043
Mwm*Firefox*maximumClientSize: 1906 x 1043

! Client behaviour
Mwm*clientAutoPlace:		True
Mwm*moveOpaque :		False

! Causes whatever your pointer is over to become the active application
Mwm*keyboardFocusPolicy:	clicktofocus

! Pointer
! Lets you select by hand the location of a new application (unless a specific
! location is indicated when you run it)
Mwm*interactivePlacement:	FALSE


! Clients look / decoration
! Sets a foreground color for every application
Mwm*client*foreground:			#ffffff

! Sets a background color for every application
Mwm*client*background:			#999999 

! Sets a foreground color for the active application
Mwm*client*activeForeground:		#ffffff

! Sets a background color for the active application
Mwm*client*activeBackground:		#eda870

! Sets a foreground color for your menu
Mwm*menu*foreground:		#ffffff

! Sets a background color for your menu
Mwm*menu*background:		#4992a7

! Sets a background color for dialog windows
Mwm*background:                  #4992a7

! Default font for your application titles
!Mwm*fontList:          -*-times-medium-*-normal-*-18-*-*-*-*-*-*-*

! Default font for your menus
!Mwm*menu*fontList:     -*-times-medium-*-normal-*-18-*-*-*-*-*-*-*


